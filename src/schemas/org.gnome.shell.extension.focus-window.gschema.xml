    <key name="bottom-right-y" type="i">
      <default>0</default>
      <summary>Bottom Right Y</summary>
      <description>The bottom right Y coordinate</description>
    </key>
    <key name="use-proportions" type="b">
      <default>true</default>
      <summary>Use Proportions</summary>
      <description>Whether to use proportions for the resize amount</description>
    </key>
    <key name="grid-size" type="i">
      <default>12</default>
      <summary>Grid Size</summary>
      <description>The grid size</description>
    </key>
    <key name="column-start" type="i">
      <default>2</default>
      <summary>Column Start</summary>
      <description>The column start</description>
    </key>
    <key name="width" type="i">
      <default>8</default>
      <summary>Width</summary>
      <description>The width</description>
    </key>
    <key name="row-start" type="i">
      <default>2</default>
      <summary>Row Start</summary>
      <description>The row start</description>
    </key>
    <key name="height" type="i">
      <default>8</default>
      <summary>Height</summary>
      <description>The height</description>
    </key>
    <key name="minimize" type="b">
      <default>false</default>
      <summary>Minimize when Unfocused</summary>
      <description>Whether to minimize the window when it is unfocused</description>
    </key>
  </schema>
  <schema id="org.gnome.shell.extensions.focus-window.shortcut">
    <key name="shortcut" type="s">
      <default>""</default>
      <summary>Shortcut</summary>
      <description>A keyboard shortcut</description>
    </key>
  </schema>
</schemalist>