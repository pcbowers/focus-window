      <description>Whether to filter to the current monitor</description>
    </key>
    <key name="monitor-to-match" type="i">
      <default>0</default>
      <summary>Monitor to Match</summary>
      <description>The monitor to match</description>
    </key>
    <key name="move-on-focus" type="b">
      <default>false</default>
      <summary>Move on Focus</summary>
      <description>Whether to move the window when it is focused</description>
    </key>
    <key name="move-to-current-workspace" type="b">
      <default>false</default>
      <summary>Move to Current Workspace</summary>
      <description>Whether to move the window to the current workspace</description>
    </key>
    <key name="move-to-current-monitor" type="b">
      <default>false</default>
      <summary>Move to Current Monitor</summary>
      <description>Whether to move the window to the current monitor</description>
    </key>
    <key name="resize-on-focus" type="b">
      <default>false</default>
      <summary>Resize on Focus</summary>
      <description>Whether to resize the window when it is focused</description>
    </key>
    <key name="maximize" type="b">
      <default>false</default>
      <summary>Maximize Window</summary>
      <description>Whether to maximize the window on focus</description>
    </key>
    <key name="use-pixels" type="b">
      <default>false</default>
      <summary>Use Pixels</summary>
      <description>Whether to use pixels for the resize amount</description>
    </key>
    <key name="top-left-x" type="i">
      <default>0</default>
