<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="focus-window@chris.al">
  <schema id="org.gnome.shell.extensions.focus-window" path="/org/gnome/shell/extensions/focus-window/">
    <!-- See also: https://docs.gtk.org/glib/gvariant-format-strings.html -->
    <key name="profiles" type="as">
      <default>[]</default>
      <summary>Profile ID's</summary>
      <description>An array of profile ID's</description>
    </key>
  </schema>

  <schema id="org.gnome.shell.extensions.focus-window.profile">
    <key name="enabled" type="b">
      <default>true</default>
      <summary>Profile Enabled</summary>
      <description>Whether the profile is enabled</description>
    </key>
    <key name="name" type="s">
      <default>""</default>
      <summary>Profile Name</summary>
      <description>The name of the profile</description>
    </key>
    <key name="applications" type="as">
      <default>[]</default>
      <summary>Profile Application ID's</summary>
      <description>An array of application ID's</description>
    </key>
  </schema>

  <schema id="org.gnome.shell.extensions.focus-window.application">
    <key name="enabled" type="b">
      <default>true</default>
      <summary>Application Enabled</summary>
      <description>Whether the application is enabled</description>
    </key>
    <key name="name" type="s">
      <default>""</default>
      <summary>Application Name</summary>
      <description>The name of the application</description>
    </key>
    <key name="shortcuts" type="as">
      <default>[]</default>
      <summary>Application Shortcut ID's</summary>
      <description>An array of keyboard shortcut ID's</description>
    </key>
    <key name="launch-application" type="b">
      <default>true</default>
      <summary>Launch Application</summary>
      <description>Whether to launch the application if it is not running</description>
    </key>
    <key name="command-line-arguments" type="s">
      <default>""</default>
      <summary>Command Line Arguments</summary>
      <description>Command line arguments to pass to the application on launch</description>
    </key>
    <key name="filter-by-title" type="b">
      <default>false</default>
      <summary>Filter by Title</summary>
      <description>Whether to filter by the application title</description>
    </key>
    <key name="title-to-match" type="s">
      <default>""</default>
      <summary>Title to Match</summary>
      <description>The title to match</description>
    </key>
    <key name="filter-by-workspace" type="b">
      <default>false</default>
      <summary>Filter by Workspace</summary>
      <description>Whether to filter by the application workspace</description>
    </key>
    <key name="filter-to-current-workspace" type="b">
      <default>false</default>
      <summary>Filter to Current Workspace</summary>
      <description>Whether to filter to the current workspace</description>
